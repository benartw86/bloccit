<h1>Topics</h1>
 
 <div class="row">
   <div class="col-md-8">
 <!-- #7 -->
     <%= render 'topic' %>
   </div>
   <!-- check to see if there is a signed in user and it is a admin. -->
   <% if user_is_authorized_for_topics? %>  
     <div class="col-md-4">
 <!-- #9 we create a link to create a new topic. -->
     <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
     </div>
   <% end %>
 </div>